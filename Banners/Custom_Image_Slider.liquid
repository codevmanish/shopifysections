{% schema %}
{
  "name": "Image Carousel",
  "tag": "section",
  "class": "custom-carousel-section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "arrow_position",
      "label": "Arrow Position",
      "default": "middle",
      "options": [
        { "value": "top", "label": "Top" },
        { "value": "middle", "label": "Middle" },
        { "value": "bottom", "label": "Bottom" }
      ]
    },
    {
      "type": "select",
      "id": "arrow_style",
      "label": "Arrow Style",
      "default": "solid",
      "options": [
        { "value": "solid", "label": "Solid" },
        { "value": "outline", "label": "Outline" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Carousel",
      "category": "Media",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}

<div class="carousel-wrapper" style="background-color: {{ section.settings.background_color }};">
  <div class="glider-contain">
    <div class="glider">
      {% for block in section.blocks %}
        <div class="carousel-slide">
          {% if block.settings.link %}
            <a href="{{ block.settings.link }}">
          {% endif %}
              <picture>
                {% if block.settings.mobile_image %}
                  <source media="(max-width: 749px)" srcset="{{ block.settings.mobile_image | image_url }}">
                {% endif %}
                {% if block.settings.desktop_image %}
                  <img src="{{ block.settings.desktop_image | image_url }}" alt="Carousel Image" loading="lazy">
                {% endif %}
              </picture>
          {% if block.settings.link %}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <button class="glider-prev {{ section.settings.arrow_position }} {{ section.settings.arrow_style }}">&#10094;</button>
    <button class="glider-next {{ section.settings.arrow_position }} {{ section.settings.arrow_style }}">&#10095;</button>
    <div role="tablist" class="glider-dots"></div>
  </div>
</div>

<!-- Glider.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/glider-js@1/glider.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glider-js@1/glider.min.css">
<style>
  .carousel-wrapper {
    width: 100%;
    max-width: 100%;
    overflow: hidden;
    position: relative;
  }

  .glider-contain {
    max-width: 100%;
    position: relative;
    margin: 0 auto;
    overflow: hidden;
  }

  .glider {
    margin: 0 auto;
    width: 100%;
  }

  .carousel-slide {
    padding: 0 10px;
    box-sizing: border-box;
  }

  .carousel-slide img {
    width: 100%;
    max-height: 800px;
    object-fit: contain;
    display: block;
  }

  .glider-prev,
  .glider-next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.5);
    border: none;
    color: #fff;
    font-size: 24px;
    padding: 10px;
    z-index: 10;
    cursor: pointer;
  }

  .glider-prev {
    left: 10px;
  }

  .glider-next {
    right: 10px;
  }

  .glider-prev.top,
  .glider-next.top {
    top: 10%;
    transform: translateY(0);
  }

  .glider-prev.bottom,
  .glider-next.bottom {
    top: auto;
    bottom: 10%;
    transform: translateY(0);
  }

  .glider-prev.outline,
  .glider-next.outline {
    background: transparent;
    border: 2px solid #fff;
  }

  .glider-prev.outline:hover,
  .glider-next.outline:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  .glider-dots {
    text-align: center;
    margin-top: 10px;
  }

  .glider-dot {
    display: inline-block;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #ddd;
    margin: 0 4px;
    cursor: pointer;
  }

  .glider-dot.active {
    background: #333;
  }
</style>


<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Glider(document.querySelector('#shopify-section-{{ section.id }} .glider'), {
      slidesToShow: 1,
      dots: '#shopify-section-{{ section.id }} .glider-dots',
      arrows: {
        prev: '#shopify-section-{{ section.id }} .glider-prev',
        next: '#shopify-section-{{ section.id }} .glider-next'
      },
      scrollLock: true,
      duration: 0.5
    });
  });
</script>
